{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "NavSite": {
      "title": "NavSite",
      "description": "A site in the website",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "labelId": {
          "type": "string"
        }
      },
      "additionalItems": false,
      "required": [
        "id",
        "path",
        "labelId"
      ]
    },
    "NavNode": {
      "title": "NavNode",
      "description": "A NavSite represented as node in a NavTree",
      "type": [
        "string",
        "object"
      ],
      "properties": {
        "site": {
          "type": "string"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NavNode"
          }
        }
      },
      "additionalItems": false,
      "required": [
        "site",
        "nodes"
      ]
    },
    "NavTree": {
      "title": "NavTree",
      "description": "A tree representing the hierachical structure of sites in a website",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NavNode"
          }
        }
      },
      "additionalItems": false,
      "required": [
        "id",
        "nodes"
      ]
    }
  },
  "type": "object",
  "properties": {
    "sites": {
      "description": "The unique identifier for a product",
      "type": "array",
      "items": {
        "$ref": "#/definitions/NavSite"
      }
    },
    "trees": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NavTree"
      }
    }
  },
  "additionalItems": false,
  "required": [
    "sites",
    "trees"
  ]
}