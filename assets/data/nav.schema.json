{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "NavNode": {
      "title": "NavNode",
      "description": "A NavSite represented as node in a NavTree",
      "type": [
        "object"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "labelId": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NavNode"
          }
        }
      },
      "additionalItems": false,
      "required": [
        "id",
        "path",
        "labelId"
      ]
    }
  },
  "type": "object",
  "properties": {
    "trees": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NavNode"
          }
        }
      }
    }
  },
  "additionalItems": false,
  "required": [
    "trees"
  ]
}